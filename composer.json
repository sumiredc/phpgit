{
    "name": "sumire/phpgit",
    "autoload": {
        "psr-4": {
            "Phpgit\\": "src/",
            "Tests\\": "tests/"
        },
        "files": [
            "functions/throw.php"
        ]
    },
    "scripts": {
        "test": "docker compose run --rm test -p",
        "coverage": "docker compose run --rm test -p --coverage",
        "bench": "docker compose run --rm bench --report=default"
    },
    "require": {
        "symfony/console": "^7.2"
    },
    "require-dev": {
        "pestphp/pest": "^3.8",
        "mockery/mockery": "^1.6",
        "phpbench/phpbench": "^1.4"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
