{
    "name": "sumire/phpgit",
    "autoload": {
        "psr-4": {
            "Phpgit\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "docker compose run --rm --entrypoint '' php ./vendor/bin/pest",
        "coverage": "docker compose run --rm --entrypoint '' php ./vendor/bin/pest -p --coverage"
    },
    "require": {
        "symfony/console": "^7.2",
        "monolog/monolog": "^3.9"
    },
    "require-dev": {
        "pestphp/pest": "^3.8"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
