{
    "name": "sumire/phpgit",
    "autoload": {
        "psr-4": {
            "Phpgit\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "init": "docker compose run --rm php git:init",
        "test": "docker compose run --rm test",
        "coverage": "docker compose run --rm test -p --coverage"
    },
    "require": {
        "symfony/console": "^7.2"
    },
    "require-dev": {
        "pestphp/pest": "^3.8"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
